# ===== API Конфигурация =====
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# ===== Модель и данные =====
MODEL_PATH=models/trained/credit_default_model.onnx
DATA_PATH=data/processed/
MODEL_VERSION=v1.0.0

# ===== MLflow (для трекинга экспериментов) =====
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=credit_scoring

# ===== DVC (для управления версиями данных) =====
DVC_REMOTE_URL=s3://your-bucket-name/credit-scoring
DVC_STORAGE_PATH=data/

# ===== База данных (если используется) =====
# DATABASE_URL=postgresql://user:password@localhost:5432/credit_scoring
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=credit_scoring
# DB_USER=postgres
# DB_PASSWORD=your_password

# ===== Облачные провайдеры (выберите один) =====

# Для Yandex Cloud:
# YC_TOKEN=your_yandex_token
# YC_CLOUD_ID=your_cloud_id
# YC_FOLDER_ID=your_folder_id

# Для AWS:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Для VK Cloud:
# VKCS_USERNAME=your_username
# VKCS_PASSWORD=your_password
# VKCS_PROJECT_ID=your_project_id

# ===== Мониторинг =====
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
EVidently_REPORT_PATH=monitoring/reports/

# ===== Kubernetes (если используется) =====
KUBECONFIG_PATH=~/.kube/config
K8S_NAMESPACE=default

# ===== Безопасность =====
SECRET_KEY=change-this-in-production
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key-for-external-access

